<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
  <name>plg_system_j2xml</name>
  <author>Helios Ciancio</author>
  <creationDate>May 2020</creationDate>
  <copyright><![CDATA[(C) 2010 - 2020 Helios Ciancio <info (at) eshiol (dot) it> (https://www.eshiol.it). All Rights Reserved.]]></copyright>
  <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL v3</license>
  <authorEmail>info@eshiol.it</authorEmail>
  <authorUrl>www.eshiol.it</authorUrl>
  <version>3.7.49</version>
  <description>PLG_SYSTEM_J2XML_XML_DESCRIPTION</description>
  <scriptfile>enable.php</scriptfile>
  <files>
    <filename plugin="j2xml">j2xml.php</filename>
  </files>
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.plg_system_j2xml.ini</language>
    <language tag="en-GB">en-GB/en-GB.plg_system_j2xml.sys.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="debug" label="PLG_SYSTEM_J2XML_DEBUG">
        <field name="debug" type="radio" default="0" class="btn-group btn-group-yesno" description="PLG_SYSTEM_J2XML_DEBUG_SYSTEM_DESC" label="PLG_SYSTEM_J2XML_DEBUG_SYSTEM_LABEL">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field name="log" type="text" label="PLG_SYSTEM_J2XML_DEBUG_FILENAME_LABEL" description="PLG_SYSTEM_J2XML_DEBUG_FILENAME_DESC" default="eshiol.log.php" showon="debug:1"/>
        <field name="phpconsole" type="radio" class="btn-group btn-group-yesno" default="0" description="PLG_SYSTEM_J2XML_DEBUG_PHPCONSOLE_DESC" label="PLG_SYSTEM_J2XML_DEBUG_PHPCONSOLE_LABEL">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
      </fieldset>
    </fields>
  </config>
</extension>
